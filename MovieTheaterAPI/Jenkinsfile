pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_PATH = 'docker-compose.yml'
        ASPNET_IMAGE_NAME = 'movietheater-aspnet-image:latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building ASP.NET Core Docker image...'
                bat 'docker build -t ${ASPNET_IMAGE_NAME} -f Dockerfile .'
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                echo 'Deploying services using Docker Compose...'
                bat 'docker-compose -f ${DOCKER_COMPOSE_PATH} down'
                bat 'docker-compose -f ${DOCKER_COMPOSE_PATH} up -d'
            }
        }

        stage('Verify Deployment') {
            steps {
                echo 'Verifying deployment on port 8080...'
                script {
                    def response = bat(
                        script: "curl -s -o /dev/null -w %%{http_code} http://localhost:8080",
                        returnStdout: true
                    ).trim()
                    if (response != '200') {
                        error "Application failed health check on port 8080!"
                    } else {
                        echo "Application is running successfully on port 8080."
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check logs for details.'
        }
    }
}
